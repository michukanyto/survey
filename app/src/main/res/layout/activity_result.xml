<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="DRINK"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="Apple"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="Orange"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="Mixed"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="Coca"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="Sprite"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="Seven UP"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="TOTAL"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAppleTotal"
                android:layout_width="93dp"
                android:layout_height="48dp"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOrangeTotal"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewMixedTotal"
                android:layout_width="101dp"
                android:layout_height="48dp"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCocaTotal"
                android:layout_width="59dp"
                android:layout_height="48dp"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSpriteTotal"
                android:layout_width="61dp"
                android:layout_height="48dp"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSevenUpTotal"
                android:layout_width="73dp"
                android:layout_height="48dp"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="PERCENTAGE"
                android:textAlignment="center"
                android:textColor="#f39c12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewApplePercentage"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOrangePercentage"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewMixedPercentage"
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCocaPercentage"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSpritePercentage"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSevenUpPercentage"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:textColor="#27ae60"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#27ae60"
            android:text="Return"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>